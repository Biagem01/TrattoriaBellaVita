<!-- app/views/ingredienti/edit.html.erb -->
<%= stylesheet_link_tag 'edit_page', media: 'all', 'data-turbo-track': 'reload' %>
<div class="container mt-4">
  <h1 class="custom-title mb-4 text-center">Modifica Ingrediente</h1>

  <div class="card mx-auto">
    <div class="card-body">
      <%= form_with(model: @cliente, url: clienti_path(@cliente), local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
        <% if @cliente.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(@cliente.errors.count, "errore") %> impedisce di salvare l'ingrediente:</h2>
            <ul>
              <% @cliente.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :nome, class: 'form-label' %>
          <%= form.text_field :nome, class: 'form-control', required: true %>
          <div class="invalid-feedback">
            Per favore, inserisci il nome del cliente.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :email, class: 'form-label' %>
          <%= form.text_field :email, class: 'form-control', required: true %>
          <div class="invalid-feedback">
            Per favore, inserisci email del cliente.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :telefono, class: 'form-label' %>
          <%= form.number_field :telefono, class: 'form-control', required: true %>
          <div class="invalid-feedback">
            Per favore, inserisci il numero di telefono del cliente.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :indirizzo, class: 'form-label' %>
          <%= form.text_field :indirizzo, class: 'form-control', required: true %>
          <div class="invalid-feedback">
            Per favore, inserisci indirizzo del cliente.
          </div>
        </div>

        <div class="d-grid mb-3">
          <%= form.submit 'Aggiorna Cliente', class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= link_to 'Indietro', clienti_index_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>

