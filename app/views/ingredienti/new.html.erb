<!-- app/views/ingredienti/new.html.erb -->
<div class="container mt-4">
  <h1 class="custom-title mb-4 text-center">AGGIUNGI NUOVO INGREDIENTE</h1>

  <%= stylesheet_link_tag 'new_ingredienti', media: 'all', 'data-turbo-track': 'reload' %>

  <div class="card mx-auto">
    <div class="card-body">
      <%= form_with(model: @ingrediente, url: ingredienti_index_path, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
        <div class="mb-3">
          <%= form.label :nome, class: 'form-label' %>
          <%= form.text_field :nome, class: 'form-control', placeholder: 'Inserisci il nome dell\'ingrediente', required: true %>
          <div class="invalid-feedback">
            Per favore, inserisci il nome dell'ingrediente.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :quantita, class: 'form-label' %>
          <%= form.text_field :quantita, class: 'form-control', placeholder: 'Inserisci la quantità', required: true %>
          <div class="invalid-feedback">
            Per favore, inserisci la quantità.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :giacenza, class: 'form-label' %>
          <%= form.text_field :giacenza, class: 'form-control', placeholder: 'Inserisci la giacenza', required: true %>
          <div class="invalid-feedback">
            Per favore, inserisci la giacenza.
          </div>
        </div>

        <div class="d-grid mb-3">
          <%= form.submit 'Crea Ingrediente', class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= link_to 'Indietro', ingredienti_index_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>

